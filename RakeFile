require 'rubygems'
require 'cucumber'
require 'cucumber/rake/task'

def options_for(env_name, pages="default", data_suite="default")
  config_file = env_name || "default"

  "FIG_NEWTON_FILE=#{config_file}.yml pages=#{pages} data_suite=#{data_suite}"
end

def create_profile(profile_name, options)
  Cucumber::Rake::Task.new(profile_name) do |t|
    t.profile = "#{profile_name}"
    t.cucumber_opts = options
  end
end

namespace :test do
  create_profile(:functional  , options_for(ENV["env"]))
  create_profile(:integration , options_for(ENV["env"]))
  create_profile(:tags        , "#{options_for(ENV["env"])} --tags #{ENV["tags"]}")

  namespace :mobile do
    create_profile(:functional  , options_for(ENV["env"], "mobile", "mobile"))
    create_profile(:integration , options_for(ENV["env"], "mobile", "mobile"))
    create_profile(:tags        , "#{options_for(ENV["env"], "mobile", "mobile")} --tags #{ENV["tags"]}")

    task :all => ["test:mobile:integration", :"test:mobile:functional"]
  end

    task :all => ["test:integration", :"test:functional"]
end

task(:default => ["test:all", "test:mobile:all"])

